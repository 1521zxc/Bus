<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="#27e1d4"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bus_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天官王府"
            android:padding="@dimen/dp_5"
            android:textColor="#fff"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#c4bfbf"
            android:orientation="vertical">

            <com.example.hp.myapplication.imgview.MyImageView
                android:id="@+id/im_fir_hcxf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tgwf" />

        </LinearLayout>


        <com.amap.api.maps.MapView
            android:id="@+id/tgwf_map"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </com.amap.api.maps.MapView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#d2cccc"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.example.hp.myapplication.Textview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="景点介绍："
            android:textSize="@dimen/sp_20" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_5"
                android:text="山西省晋城市阳城县天官王府，是明代杰出的政治家、改革家，官至刑、户、吏三部尚书，曾辅佐明王朝达四十年之久的重臣王国光及其家族数代相承建造的大型官居建筑群，距今已有近500年的历史，为是国家AAAA级景区。
"
                android:textColor="#f00"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:id="@+id/tgwf_btn"
            android:text="点击订票"
            android:textStyle="bold"
            android:textColor="#0621f1"
            android:textSize="@dimen/sp_15"
            android:padding="@dimen/dp_5"
            android:background="@drawable/btn_shape"
            />

    </LinearLayout>
</LinearLayout>