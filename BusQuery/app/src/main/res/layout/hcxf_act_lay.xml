<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="#27e1d4"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bus_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="皇城相府"
            android:padding="@dimen/dp_5"
            android:textColor="#fff"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#c4bfbf"
            android:orientation="vertical">

            <com.example.hp.myapplication.imgview.MyImageView
                android:id="@+id/im_fir_hcxf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/hcxf" />

        </LinearLayout>


        <com.amap.api.maps.MapView
            android:id="@+id/hcxf_map"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </com.amap.api.maps.MapView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#d2cccc"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.example.hp.myapplication.Textview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景点介绍："
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_20" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_5"
                android:text="皇城相府（国家AAAAA级景区），位于山西省晋城市阳城县北留镇。皇城相府（又称午亭山村）总面积3.6万平方米，是清文渊阁大学士兼吏部尚书加三级、《康熙字典》总阅官、康熙皇帝35年经筵讲师陈廷敬的故居，其由内城、外城、紫芸阡等部分组成，御书楼金碧辉煌，中道庄巍峨壮观，斗筑居府院连绵，河山楼雄伟险峻，藏兵洞层叠奇妙，是一处罕见的明清两代城堡式官宦住宅建筑群，被专家誉为“中国北方第一文化巨族之宅”
"
                android:textColor="#f00"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
</ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:id="@+id/hcxf_btn"
            android:text="点击订票"
            android:textStyle="bold"
            android:textColor="#0621f1"
            android:textSize="@dimen/sp_15"
            android:padding="@dimen/dp_5"
            android:background="@drawable/btn_shape"
            />

    </LinearLayout>
</LinearLayout>