<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gudie_cont"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fm"
    tools:context=".GuideActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_65"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginBottom="15dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="行"
        android:textColor="#da1a17"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:gravity="center"
        android:text="天"
        android:textColor="#ea7f0d"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp_5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center"
        android:text="下"
        android:textColor="#ce1ae6"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold" />
</LinearLayout>
    <com.example.hp.myapplication.Textview.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_150"
        android:gravity="center"
        android:text="欢迎您进入行天下"
        android:textColor="#6cc41a"
        android:textSize="@dimen/sp_18"
        android:layout_alignParentLeft="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />
</RelativeLayout>