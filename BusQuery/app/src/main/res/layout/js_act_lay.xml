<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="#27e1d4"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bus_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="珏山"
            android:padding="@dimen/dp_5"
            android:textColor="#fff"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#c4bfbf"
            android:orientation="vertical">

            <com.example.hp.myapplication.imgview.MyImageView
                android:id="@+id/im_fir_hcxf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/js" />

        </LinearLayout>


        <com.amap.api.maps.MapView
            android:id="@+id/js_map"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </com.amap.api.maps.MapView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#d2cccc"
        android:orientation="vertical">
        <com.example.hp.myapplication.Textview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景点介绍："
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_20" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_5"
                android:text="珏山风景区又名角山，位于晋城市区东南13公里处的丹河南岸。主峰海拔973米，珏山风景素以险峻、雄奇驰名，古有“晋魏河山第一奇”之美称，“珏山吐月”为晋城四大名胜之一。佛道名山，传齐隋泰斗慧远大和尚在此始建青莲寺，密、禅、净土，各宗皆精，名僧辈出，时称佛都。现存宋建唐塑，列为国宝；道观飞峙峰头，林木葱葱，山岚缭缭，寻天门而上，恍若仙游，素誉北国武当。2009年10月珏山景区入选中国百佳避暑名山。
"
                android:textColor="#f00"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:id="@+id/js_btn"
            android:text="点击订票"
            android:textStyle="bold"
            android:textColor="#0621f1"
            android:textSize="@dimen/sp_15"
            android:padding="@dimen/dp_5"
            android:background="@drawable/btn_shape"
            />

    </LinearLayout>
</LinearLayout>